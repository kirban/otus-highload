extends layout 

block content 
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container
      a.navbar-brand(href='/me') Social App
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarsExample07' aria-controls='navbarsExample07' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExample07.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            if title == 'Dashboard'
              a.nav-link.active.disabled(href='/me') Me
            else
              a.nav-link(href='/me') Me
          li.nav-item
            if title == 'Pages'
              a.nav-link.active.disabled(href='/pages') Pages
            else
              a.nav-link(href='/pages') Pages
          li.nav-item
            a#logout.nav-link(href='#') Logout
        form.form-inline.my-2.my-md-0
          input.form-control(type='text' placeholder='Search' aria-label='Search')
  .container
    block main_content

block scripts 
  script(src="main_layout_scripts.js") 