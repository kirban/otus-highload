extends layout.pug

block content 
  section.vh-100(style='background-color: #eee;')
    .container.h-100
      .row.d-flex.justify-content-center.align-items-center.h-100
        .col-lg-12.col-xl-11
          .card.text-black(style='border-radius: 25px;')
            .card-body.p-md-5
              .row.justify-content-center
                .col-md-10.col-lg-6.col-xl-5.order-2.order-lg-1
                  p.text-center.h1.fw-bold.mb-5.mx-1.mx-md-4.mt-4 Sign up
                  form#signup.mx-1.mx-md-4
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-user.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        input#signUpName.form-control(name="firstName" required='' type='text')
                        label.form-label(for='signUpName') Имя
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-user.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        input#signUpLastName.form-control(name="lastName" required='' type='text')
                        label.form-label(for='signUpLastName') Фамилия
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-user.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        input#signUpAge.form-control(name="age" required='' type='number' min='1' max='100')
                        label.form-label(for='signUpAge') Возраст
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-user.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        select.form-select(required='' name="gender")
                          option(selected='' disabled='')
                          option(value='male') мужской
                          option(value='female') женский
                        label.form-label(for='signUpGender') Пол
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-envelope.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        textarea#signUpInterests.form-control(name="interests" placeholder='Опишите Ваши интересы' required='')
                        label(for='signUpInterests') Интересы
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-user.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        input#signUpCity.form-control(name="city" required='' type='text')
                        label.form-label(for='signUpCity') Город
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-envelope.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        input#signUpUsername.form-control(name="username" required='' type='text')
                        label.form-label(for='signUpUsername') Username
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-lock.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        input#signupPassword1.form-control(name="pass1" required='' type='password')
                        label.form-label(for='signupPassword1') Пароль
                    .d-flex.flex-row.align-items-center.mb-4
                      i.fas.fa-key.fa-lg.me-3.fa-fw
                      .form-outline.flex-fill.mb-0
                        input#signupPassword2.form-control(name="pass2" required='' type='password')
                        label.form-label(for='signupPassword2') Пароль еще раз
                    .d-flex.justify-content-center.mx-4.mb-3.mb-lg-4
                      button.btn.btn-primary.btn-lg(type='submit') Submit
                    p#error произошла ошибка: 
                .col-md-10.col-lg-6.col-xl-7.d-flex.align-items-center.order-1.order-lg-2
                  img.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp' alt='Sample image')
block scripts 
  script(src="register.js") 